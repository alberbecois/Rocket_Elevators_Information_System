<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Admin full name</th>
      <th>Admin email</th>
      <th>Admin phone</th>
      <th>Tech full name</th>
      <th>Tech email</th>
      <th>Tech phone</th>
      <th>Customer</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.admin_full_name %></td>
        <td><%= building.admin_email %></td>
        <td><%= building.admin_phone %></td>
        <td><%= building.tech_full_name %></td>
        <td><%= building.tech_email %></td>
        <td><%= building.tech_phone %></td>
        <td><%= building.customer %></td>
        <td><%= building.address %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

