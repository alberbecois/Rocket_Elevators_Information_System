<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Headquarter address</th>
      <th>Contact full name</th>
      <th>Contact phone</th>
      <th>Contact email</th>
      <th>Business description</th>
      <th>Tech full name</th>
      <th>Tech phone</th>
      <th>Tech email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.business %></td>
        <td><%= customer.headquarter_address %></td>
        <td><%= customer.contact_full_name %></td>
        <td><%= customer.contact_phone %></td>
        <td><%= customer.contact_email %></td>
        <td><%= customer.business_description %></td>
        <td><%= customer.tech_full_name %></td>
        <td><%= customer.tech_phone %></td>
        <td><%= customer.tech_email %></td>
        <td><%= customer.user %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

