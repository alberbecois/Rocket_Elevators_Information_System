<p id="notice"><%= notice %></p>

<h1>Batteries</h1>

<table>
  <thead>
    <tr>
      <th>Battery type</th>
      <th>Status</th>
      <th>Commissioning date</th>
      <th>Last inspection date</th>
      <th>Operation certificate</th>
      <th>Information</th>
      <th>Notes</th>
      <th>Building</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batteries.each do |battery| %>
      <tr>
        <td><%= battery.battery_type %></td>
        <td><%= battery.status %></td>
        <td><%= battery.commissioning_date %></td>
        <td><%= battery.last_inspection_date %></td>
        <td><%= battery.operation_certificate %></td>
        <td><%= battery.information %></td>
        <td><%= battery.notes %></td>
        <td><%= battery.building %></td>
        <td><%= battery.employee %></td>
        <td><%= link_to 'Show', battery %></td>
        <td><%= link_to 'Edit', edit_battery_path(battery) %></td>
        <td><%= link_to 'Destroy', battery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

