<p id="notice"><%= notice %></p>

<h1>Columns</h1>

<table>
  <thead>
    <tr>
      <th>Column type</th>
      <th>Floors</th>
      <th>Column status</th>
      <th>Information</th>
      <th>Notes</th>
      <th>Battery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @columns.each do |column| %>
      <tr>
        <td><%= column.column_type %></td>
        <td><%= column.floors %></td>
        <td><%= column.column_status %></td>
        <td><%= column.information %></td>
        <td><%= column.notes %></td>
        <td><%= column.battery %></td>
        <td><%= link_to 'Show', column %></td>
        <td><%= link_to 'Edit', edit_column_path(column) %></td>
        <td><%= link_to 'Destroy', column, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

